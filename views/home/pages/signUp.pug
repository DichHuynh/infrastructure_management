doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Đăng ký người dùng mới
    link(rel="stylesheet", href="/home/css/signUp.css")
  body
    .signup-container
      h2 Đăng ký người dùng mới
      form(action="/register", method="POST", enctype="multipart/form-data")
        .form-group
          label(for="fullname") Họ và tên
          input#fullname(type="text", name="fullname", placeholder="Nhập họ và tên" required)
        .form-group
          label(for="email") Email
          input#email(type="email", name="email", placeholder="Nhập email" required)
        .form-group
          label(for="password") Mật khẩu
          input#password(type="password", name="password", placeholder="Nhập mật khẩu" required)
        .form-group
          label(for="confirm-password") Nhập lại mật khẩu
          input#confirm-password(type="password", name="confirm-password", placeholder="Nhập lại mật khẩu" required)
        .form-group
          label(for="avatar") Chọn avatar
          input#avatar(type="file", name="avatar", accept="image/*")
        .form-group
          label(for="address") Địa chỉ
          input#address(type="text", name="address", placeholder="Nhập địa chỉ" required)
        button(type="submit") Đăng ký
      p Bạn đã có tài khoản? 
        a(href="/signIn") Đăng nhập
